              <text class="f34">/6</text>
            </view> -->
            <view class="f24 fw5">会员专享优惠券礼包</view>
          </view>
          <button class="weui-btn w-186" type="primary" bindtap="tapToVipCenter">查看会员</button>
        </view>
      </view>
    </view>
  </view>
    
  <view class="i-page ml16 mr16 pb32">
      <!-- 热点推荐 -->
      <view class="recommend-h-auto">
