          <image class="pic-default" src="/images/default/bg_img.png" mode="aspectFill"/>
          <image class="items-slide-image" src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" mode="aspectFill"/>
