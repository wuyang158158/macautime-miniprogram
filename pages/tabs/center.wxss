/* pages/tabs/center.wxss */
.userinfo{
    border-radius:16rpx;
    overflow: hidden;
}
.avatar{
    width: 114rpx;
    height: 114rpx;
    border-radius: 50%;
}
.join-vip{
    padding: 0 22rpx;
    height:100rpx;
    background:linear-gradient(90deg,rgba(252,222,178,1),rgba(245,206,147,1));
    border-radius:16rpx;
}
.join-vip-icon{
    width: 32rpx;
    height: 40rpx;
}
.w-160{
    width: 160rpx;
    height: 56rpx;
    line-height: 56rpx;
    font-size: 24rpx;
}
.record{
    height:180rpx;
    border-radius:16rpx;
}
.record-icon{
    width: 36rpx;
    height: 36rpx;
}
.user-menu{
    border-radius:16rpx;
}
.h-120{
    height: 120rpx;
}
.menu-icon{
    width: 32rpx;
    height: 32rpx;
}
.more-icon{
    width: 30rpx;
    height: 30rpx;
}
.w-auto{
    text-align: left;
    font-size: 32rpx;
    padding: 0;
    margin: 0;
}
button[type=contact]{
    background: rgba(255,255,255,1);
    color: rgba(34,34,34,1);
}
.vip-info{
    margin: 16rpx 24rpx 0;
    height: 360rpx;
    border-radius:24rpx;
    overflow: hidden;
}
.header-bg{
    position: absolute;
    z-index: 2;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
}
.vip-info .slide-text{
    position: absolute;
    z-index: 5;
    left: 40rpx;
    top: 57rpx;
}
.vip-ctime{
    margin-top: 85rpx;
}
.userinfo-vip{
    margin-top: -28rpx;
    position: relative;
    z-index: 5;
}
.username{
    padding: 0;
    text-align: left;
    font-size: 44rpx;
}