/* pages/tabs/index.wxss */
.swiper{
  height: 300rpx;
}
.container{
  width: 100%;
  height: 500rpx;
  position: relative;
}
.header-bg{
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 2;
}
.header-ct{
  padding: 30rpx 49rpx;
  position: relative;
  z-index: 5;
  padding-top: 52px;
}
.header-ct .title{
  font-weight:600;
  line-height: 54rpx;
}
.location{
  height: 50rpx;
}
.location .location-icon{
  width: 28rpx;
  height: 28rpx;
  margin-right: 15rpx;
  margin-top: -4rpx;
}
.location .i{
  padding: 0 24rpx;
}
.h-80{
  height: 80rpx;
}
.w-186{
  width: 186rpx;
}
.i-page {
  position: relative;
  z-index: 8;
}
.i-page .nav{
  width: 100%;
  height: 80rpx;
  padding: 41rpx 0;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 0rpx 30rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius:16rpx;
}
.nav .flex-1{
  height: 100%;
}
.nav-popular{
  width: 48rpx;
  height: 48rpx;
}
.i-page .message{
  height:80rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.15);
  border-radius:40rpx;
}
.message-close-icon{
  width: 20rpx;
  height: 20rpx;
}
.ex-content{
  height:406rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.15);
  border-radius:16rpx;
  overflow: hidden;
  position: relative;
}
.ex-content-banner-default{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}
.ex-content-banner{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
}
.vt-content{
  height:405rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.15);
