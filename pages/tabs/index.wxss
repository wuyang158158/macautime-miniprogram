}
.slide{
  height:236rpx;
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(237,236,236,1);
  border-radius:20rpx;
  overflow: hidden;
}
.w-152{
  width: 152rpx;
}
.vt-detail{
  min-width: 0;
}
.mt25{
  margin-top: 25rpx;
}
.mb22{
